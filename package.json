{
  "name": "html-ready",
  "version": "2.1.0",
  "description": "The promise to ensure window/document is ready",
  "repository": "1000ch/html-ready",
  "keywords": [
    "window",
    "document",
    "load"
  ],
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.module.js",
  "esmodule": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "unpkg": "dist/index.mjs",
  "author": {
    "name": "Shogo Sensui",
    "email": "shogosensui@gmail.com",
    "url": "https://github.com/1000ch"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/1000ch/html-ready/issues"
  },
  "homepage": "https://github.com/1000ch/html-ready",
  "scripts": {
    "build": "microbundle",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.1",
    "@types/jest": "^27.0.2",
    "jest": "^27.3.1",
    "microbundle": "^0.14.1",
    "ts-jest": "^27.0.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/*.test.ts"
    ],
    "testEnvironment": "jsdom"
  }
}
